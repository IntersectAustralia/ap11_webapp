%html
  %head
    = render 'layouts/head'
  %body
    = render 'layouts/banner'

    .container.main_content
      %h1= yield :title

      - if content_for?(:breadcrumb)
        = yield :breadcrumb

      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          = msg
      = yield

  %footer
    = render 'layouts/footer'