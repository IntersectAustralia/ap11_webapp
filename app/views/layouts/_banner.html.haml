#banner
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tbody
      %tr
        %td.bck_head{:align => "center"}
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "880"}
            %tbody
              %tr
                %td{:width => "225"}
                  %a{:href => "http://www.unsw.edu.au", :target => "_blank"}
                    %img{:alt => "Link to UNSW website", :border => "0", :height => "103", :src => "/assets/logo_unsw.gif", :width => "225"}/
                %td{:width => "655"}
                  %a{:href => "/"}
                    %img{:alt => "Link to The New South Wales Systems Biology Initiative home page", :border => "0", :height => "103", :src => "/assets/hd_home.gif", :width => "655"}/

          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "880", :height => "30"}
            %tbody{}
              %tr
                %td.banner-label Proteomic Genomic Nexus
                %td{:height => "30"}
                  - if user_signed_in?
                    %navbar.nav.pull-right
                      %div.dropdown
                        = link_to user_dropdown_menu,'#', :class => "dropdown-toggle", 'data-toggle' => "dropdown"
                        %div.dropdown-menu
                          %div= link_to "Logout", destroy_user_session_path
                          %div= link_to "Change My Password", users_edit_password_path
                          %div= link_to "Edit My Details", edit_user_registration_path