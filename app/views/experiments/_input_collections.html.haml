%table{:class => "table table-striped"}
  %thead
    %tr
      %th Name
      %th License
      %th Access Rights
      %th Location
      %th FOR Code
      %th
      %th

  - @input_collections.each do |collection|
    %tr
      %td= collection.name
      %td= collection.license
      %td= collection.access_rights
      %td= collection.location
      %td= collection.for_code1
      %td= link_to 'Edit', edit_experiment_input_collection_path(@experiment, collection)
      %td
        %a{"data-toggle" => "modal", :href => "#myModal#{collection.id}"} Delete
        .modal.hide{:id => "myModal#{collection.id}"}
          .modal-header
            %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
            %h3 #{collection.name}
          .modal-body
            %i.icon-exclamation-sign.icon-black
            Are you sure you want to delete input collection #{collection.name}?
          .modal-footer
            %a.btn{"data-dismiss" => "modal", :href => '#'} Close
            %a.btn.btn-danger{:href => '/experiments/' + @experiment.id.to_s + '/input_collections/' + collection.id.to_s, "data-method" => "delete"} Delete